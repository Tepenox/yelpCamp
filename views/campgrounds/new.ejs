<% include ../partials/header.ejs  %>


<div class="container">

    <div class="row">
        <h1>Creat a New Camp Ground</h1>
        <div style="width: 30% ; margin: 25px auto;">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Campground Name</label>
                    <input id="name" class="form-control" type="text" , name="campground[name]" placeholder="Enter Name"
                        required>
                </div>
                <div class="form-group">
                    <label for="price">Price in $</label>
                    <input id="price" class="form-control" type="number" , name="campground[price]" placeholder="Price per night in $"
                        min="0" step="0.1" required>
                </div>
                <div class="form-group">
                    <label for="image">Campground Image</label>
                    <input id="image" class="form-control" type="file" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label for="description">Campground Description</label>
                    <textarea id="description" style="text-align:left;" class="form-control" rows="4" name="campground[description]" placeholder="Campground Description Here..."></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>
</div>



