<% include ../partials/header %>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp !</h1>
                <p>View our Recommended Camps from all over the world !!</p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Campground</a>
            </div>
        </header>

        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% for(var i = 0 ; i<campgrounds.length ; i++){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= campgrounds[i].image %>">
                    </div>
                    <div class="caption">
                        <h4>
                            <%= campgrounds[i].name %>
                        </h4>
                    </div>
                    <p>
                        <a class="btn btn-md btn-primary" href="/campgrounds/<%=campgrounds[i].id %>">
                            More Info
                        </a>
                    </p>
                </div>
                <% } %>
        </div>
    </div>
    </div>

    <% include ../partials/footer %>